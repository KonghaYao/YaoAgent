{
    "name": "@langgraph-js/crawler",
    "version": "2.0.0",
    "description": "A universal web crawler for LLM frameworks, compatible with Tavily API for extract and search, and integrates with Hono.js and Model Context Protocol (MCP).",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "publishConfig": {
        "registry": "https://registry.npmjs.org/",
        "access": "public"
    },
    "scripts": {
        "dev": "deno serve -A --unstable-sloppy-imports --env-file=.env ./src/endpoint/hono.ts",
        "dev:mcp": "bunx --bun @modelcontextprotocol/inspector",
        "build": "vite build && tsc",
        "prepublish": "pnpm build",
        "test": "vitest",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint src --ext .ts",
        "format": "prettier --write \"src/**/*.ts\""
    },
    "keywords": [
        "langgraph",
        "crawler",
        "web-scraping",
        "readability",
        "markdown",
        "html-parser",
        "content-extraction",
        "wechat",
        "llm",
        "ai"
    ],
    "author": "KonghaYao",
    "license": "Apache-2.0",
    "packageManager": "pnpm@10.6.3",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/KonghaYao/YaoAgent.git"
    },
    "homepage": "https://langgraph-js.netlify.app",
    "bugs": {
        "url": "https://github.com/KonghaYao/YaoAgent/issues"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.22.0",
        "@hono/mcp": "^0.1.5",
        "hono": "^4.10.6"
    },
    "devDependencies": {
        "@b-fuze/deno-dom": "jsr:^0.1.56",
        "@mixmark-io/domino": "^2.2.0",
        "@mozilla/readability": "^0.6.0",
        "@tiptap/core": "^2.12.0",
        "@tiptap/extension-blockquote": "^2.12.0",
        "@tiptap/extension-bold": "^2.12.0",
        "@tiptap/extension-bullet-list": "^2.12.0",
        "@tiptap/extension-code": "^2.12.0",
        "@tiptap/extension-code-block": "^2.12.0",
        "@tiptap/extension-color": "^2.12.0",
        "@tiptap/extension-document": "^2.12.0",
        "@tiptap/extension-heading": "^2.12.0",
        "@tiptap/extension-image": "^2.12.0",
        "@tiptap/extension-link": "^2.12.0",
        "@tiptap/extension-list-item": "^2.12.0",
        "@tiptap/extension-ordered-list": "^2.12.0",
        "@tiptap/extension-paragraph": "^2.12.0",
        "@tiptap/extension-text": "^2.12.0",
        "@tiptap/extension-text-style": "^2.12.0",
        "@tiptap/html": "^2.12.0",
        "@types/turndown": "^5.0.5",
        "defuddle": "^0.6.6",
        "iconv-lite": "^0.6.3",
        "rollup-plugin-node-externals": "^8.1.2",
        "turndown": "^7.2.0",
        "typescript": "^5.3.3",
        "vitest": "^3.2.4",
        "zod": "^3.25.17"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./hono": {
            "types": "./dist/endpoint/hono.d.ts",
            "default": "./dist/hono.js"
        },
        "./mcp": {
            "types": "./dist/endpoint/mcp.d.ts",
            "default": "./dist/mcp.js"
        }
    }
}
