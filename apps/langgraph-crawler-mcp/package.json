{
    "name": "@langgraph-js/crawler-mcp",
    "version": "1.5.3",
    "description": "A powerful web crawler designed specifically for LLM applications, capable of extracting clean, readable content from various web pages and converting it to Markdown format.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "langgraph-crawler": "dist/cli.js"
    },
    "type": "module",
    "publishConfig": {
        "registry": "https://registry.npmjs.org/",
        "access": "public"
    },
    "scripts": {
        "dev": "bun run src/cli.ts",
        "dev:mcp": "pnpx @modelcontextprotocol/inspector@latest bun run src/cli.ts",
        "build": "tsc",
        "prepublish": "pnpm build"
    },
    "keywords": [
        "langgraph",
        "crawler",
        "web-scraping",
        "readability",
        "markdown",
        "html-parser",
        "content-extraction",
        "wechat",
        "llm",
        "ai",
        "mcp"
    ],
    "author": "KonghaYao",
    "license": "Apache-2.0",
    "packageManager": "pnpm@10.6.3",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/KonghaYao/YaoAgent.git"
    },
    "homepage": "https://langgraph-js.netlify.app",
    "bugs": {
        "url": "https://github.com/KonghaYao/YaoAgent/issues"
    },
    "dependencies": {
        "@langgraph-js/crawler": "workspace:^1.0.0",
        "@modelcontextprotocol/sdk": "^1.12.1"
    },
    "devDependencies": {
        "@types/node": "^22.15.29"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
